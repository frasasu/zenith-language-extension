{
  "scopeName": "source.zenith",
  "name": "Zenith Language",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#dates"
    },
    {
      "include": "#dictionary"
    },
    {
      "include": "#events"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.zenith",
      "match": "//.*$"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.target.zenith",
          "match": "\\btarget\\b"
        },
        {
          "name": "keyword.control.end.zenith",
          "match": "\\bend_target\\b"
        },
        {
          "name": "keyword.control.law.zenith",
          "match": "\\blaw\\b"
        },
        {
          "name": "keyword.control.law-end.zenith",
          "match": "\\bend_law\\b"
        },
        {
          "name": "keyword.other.zenith",
          "match": "\\b(key|dictionnary|Event|GROUP|start_date|period|at)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.zenith",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.zenith",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "dates": {
      "patterns": [
        {
          "name": "constant.numeric.date.zenith",
          "match": "\\b\\d{4}_\\d{2}_\\d{2}\\b"
        },
        {
          "name": "constant.numeric.time.zenith",
          "match": "\\b\\d{2}_\\d{2}\\b"
        },
        {
          "name": "constant.language.date.zenith",
          "match": "\\ba\\d{4}_\\d{2}_\\d{2}_\\d{2}_\\d{2}\\b"
        }
      ]
    },
    "dictionary": {
      "patterns": [
        {
          "name": "variable.language.dictionary.zenith",
          "match": "\\bd\\d+\\b"
        },
        {
          "name": "storage.type.reference.zenith",
          "match": "\\[d\\d+\\]"
        }
      ]
    },
    "events": {
      "patterns": [
        {
          "name": "entity.name.function.event.zenith",
          "match": "\\b[A-Z]\\b"
        },
        {
          "name": "entity.name.tag.event.zenith",
          "match": "\\b[A-Z]\\[d\\d+\\]\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.zenith",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.zenith",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.duration.zenith",
          "match": "\\b\\d+(\\.\\d+)?\\^\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.zenith",
          "match": "[\\^\\-]"
        },
        {
          "name": "keyword.operator.assignment.zenith",
          "match": ":"
        },
        {
          "name": "punctuation.separator.zenith",
          "match": "[\\.,]"
        }
      ]
    }
  }
}